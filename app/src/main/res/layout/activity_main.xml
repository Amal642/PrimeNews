<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="0dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="2000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="400dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget jbhfjksdbhfjksbfjkbskjbhajhdgbasjkdbajksdajkdfbasjkffajskfgfjkasfgksafgkasgasga"
        app:layout_constraintTop_toBottomOf="@+id/image_slider"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Announcments" />

        <Button
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="0" />
        <Button
            android:id="@+id/bustime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Time"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="0" />
        <Button
            android:id="@+id/Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="1" />
        <Button
            android:id="@+id/Taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taxi"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="1" />
        <Button
            android:id="@+id/Workers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workers"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="1" />
        <Button
            android:id="@+id/Sevanam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sevanam"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="2" />
        <Button
            android:id="@+id/shops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shops"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="2" />
        <Button
            android:id="@+id/offices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offices"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="2" />
        <Button
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="3" />
        <Button
            android:id="@+id/market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="3" />
        <Button
            android:id="@+id/Hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="3" />
        <Button
            android:id="@+id/BloodBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Bank"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="4" />
        <Button
            android:id="@+id/restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="4" />
        <Button
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="4" />
        <Button
            android:id="@+id/Theatre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theatre"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="5" />
        <Button
            android:id="@+id/Tourism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourism"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="5" />
        <Button
            android:id="@+id/Media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="5" />
        <Button
            android:id="@+id/Feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            app:layout_column="0"
            android:layout_marginEnd="20dp"
            app:layout_row="6" />
        <Button
            android:id="@+id/Links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Links"
            app:layout_column="1"
            android:layout_marginEnd="20dp"
            app:layout_row="6" />
        <Button
            android:id="@+id/Aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            app:layout_column="2"
            android:layout_marginEnd="20dp"
            app:layout_row="6" />




    </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

</RelativeLayout>